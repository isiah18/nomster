<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1><%= @place.name %></h1>
	<i><%= @place.address %></i>
	<br /><br />
	<p><%= @place.description %></p>


	<% if @place.latitude.present? && @place.longitude.present? %>
	    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
	    <script>
		function initialize() {
		  var myLatlng = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>);
		  var mapOptions = {
		    zoom: 12,
		    center: myLatlng
		  }
		  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

		  var marker = new google.maps.Marker({
		      position: myLatlng,
		      map: map,
		      title: 'Hello World!'
		  });
		}

		google.maps.event.addDomListener(window, 'load', initialize);

		</script>

		<div id="map-canvas"></div>
	<% end %>



	<br />

	<div class = "pull-right">
		<% if current_user && @place.user == current_user %>
			<%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-info' %>
			<!-- Button trigger modal for adding photo -->
			<button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
			  Add Picture
			</button>
			<%= link_to 'Destroy', place_path(@place), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'}, :class => 'btn btn-danger' %>
		<% end %>
	</div>

	<br />
	<br />
	
	
	<div class='clear'></div>

	<% @place.photos.each do |pic| %>
		<div class= 'col-xs-12 col-sm-5 col-sm-offset-1'>	
			<% if pic.picture.present? %>
				<%= image_tag pic.picture %><br />
			<% end %>
				<%= pic.caption %>
		</div>
	<% end %>
</div>

<div class="clear"></div>




<!-- Modal For Photos -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Picture</h4>
      </div>
      <%= simple_form_for @photo, :url => place_photos_path(@place) do |p| %>
	      <div class="modal-body">
	      		<%= p.input :picture %>
	        	<%= p.input :caption %>	        
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
	        <%= p.submit 'Add Picture', :class => 'btn btn-info' %>
	      </div>
      <% end %>
    </div>
  </div>
</div>



<div class="clear"></div>
<br />
<br />
<br />



<!-- Modal For Comment -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Comment</h4>
      </div>
      <%= simple_form_for @comment, :url => place_comments_path(@place) do |f| %>
      	<div class="modal-body">
			<%= f.input :message %>
			<%= f.input :rating, :as => :select, :collection => Comment::RATINGS %>
			
		</div>
      	<div class="modal-footer">
        	<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
       		<%= f.submit "Add Comment", :class => 'btn btn-info' %>
      	</div>
    	</div>
   	 <% end %>
  </div>
</div>

<br />
<br />
<div class = "col-xs-10 col-xs-offset-1">
<h1 class="pull-left"> Comments </h1>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">
  Add A Comment
</button>
</div>
<div class="clear"></div>

<% @place.comments.each do |comment| %>
	<div class = "col-xs-12 col-sm-6">
	<blockquote>
		<% if comment.humanized_rating.present? %>
			 <i><%= comment.humanized_rating %></i> --
		<% end %>
				<%= comment.message %>
		<small> <%= comment.user.email %></small> 
	</blockquote>
	</div>
<% end %>