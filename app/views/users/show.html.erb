<div class= "booyah-box">
	<div class = "col-xs-4">
		<%= image_tag 'user.png' %>
	</div>
	<div class = "col-xs-8">	
		<h1>User Dashboard</h1>
		<h1><%= @user.email %></h1>
		<h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %> </h3>
		<h4><%= @user.comments.count %> Total Comments</h4>
		<h5><%= @user.comments.where(:rating => '5_star').count %> Total 5 Star Reviews</h5>
	</div>
	<div class= "clear"></div>
</div>